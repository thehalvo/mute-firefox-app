{
  "manifest_version": 2,
  "name": "Mute",
  "version": "1.0.0",
  "description": "Automatically mutes system audio during Twitch ads",
  "browser_specific_settings": {
    "gecko": {
      "id": "mute@twitchadmuter.com",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "nativeMessaging",
    "*://*.twitch.tv/*"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Mute - Twitch Ad Muter",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
